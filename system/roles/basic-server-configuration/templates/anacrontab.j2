# /etc/anacrontab: configuration file for anacron

# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
GISLAB_ROOT={{ GISLAB_ROOT }}
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:{{ GISLAB_ROOT }}/admin

START_HOURS_RANGE=1-4

# These replace cron's entries
1       5       cron.daily       nice run-parts --report /etc/cron.daily
7       10      cron.weekly      nice run-parts --report /etc/cron.weekly
@monthly        15      cron.monthly nice run-parts --report /etc/cron.monthly

# GIS.lab jobs
1       120      gislab.daily       nice run-parts --report {{ GISLAB_INSTALL_JOBS_ROOT }}/daily
7       120      gislab.weekly      nice run-parts --report {{ GISLAB_INSTALL_JOBS_ROOT }}/weekly
@monthly        120      gislab.monthly nice run-parts --report {{ GISLAB_INSTALL_JOBS_ROOT }}/monthly
